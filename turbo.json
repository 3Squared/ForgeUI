{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test-unit" : {
      "dependsOn": []
    },
    "test": {
      "dependsOn": [
        "^test"
      ]
    },
    "lint": {
      "outputs": []
    },
    "deploy" : {
      "dependsOn": ["build"]
    },
    "dev": {
      "cache": false
    },

    "@3squared/forge-ui#make-icons" : {
      "inputs" : ["src/icons/icons/*.svg"],
      "outputs" : ["src/icons/icons.ts"]
    },
    "@3squared/forge-ui#build": {
      "dependsOn": [
        "@3squared/forge-ui#make-icons"
      ],
      "outputs": []
    }
  }
}
